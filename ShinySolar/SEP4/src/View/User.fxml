<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" prefHeight="520.0" prefWidth="970.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UserController">
   <top>
      <FlowPane hgap="5.0">
            <Button fx:id="panelBtn" mnemonicParsing="false" onAction="#openPanels" style="-fx-background-color: #3D4956; -fx-border-radius: 5em; -fx-background-radius: 5em;" text="Panels" textFill="WHITE">
            <FlowPane.margin>
               <Insets />
            </FlowPane.margin></Button>
            <Button fx:id="manufacturerBtn" mnemonicParsing="false" onAction="#openManufacturers" style="-fx-background-color: #3D4956; -fx-background-radius: 5em; -fx-border-radius: 5em;" text="Manufacturers" textFill="WHITE" />
         <HBox alignment="TOP_RIGHT" prefHeight="25.0" prefWidth="757.0">
            <children>
               <Button fx:id="signOutBtn" mnemonicParsing="false" onAction="#signOut" style="-fx-background-color: #b23b3b; -fx-background-radius: 5em; -fx-border-radius: 5em;" text="Sign Out" textFill="WHITE" />
            </children>
            <FlowPane.margin>
               <Insets />
            </FlowPane.margin>
         </HBox>
         <Button fx:id="save" mnemonicParsing="false" onAction="#save" style="-fx-background-radius: 5em; -fx-border-radius: 5em; -fx-background-color: #00BFFF;" text="Save" textFill="WHITE" />
         <BorderPane.margin>
            <Insets left="5.0" right="5.0" />
         </BorderPane.margin>
      </FlowPane>
   </top>
   <bottom>
      <Button fx:id="measurementBtn" mnemonicParsing="false" onAction="#openMeasurements" style="-fx-background-color: #eda678; -fx-background-radius: 5em; -fx-border-radius: 5em;" text="Graph" textFill="WHITE" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" top="5.0" />
         </BorderPane.margin></Button>
   </bottom>
   <center>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER_RIGHT" layoutX="285.0" layoutY="175.0" prefHeight="37.0" prefWidth="400.0" text="Welcome to ShinySolar!">
               <font>
                  <Font size="38.0" />
               </font>
            </Label>
            <Label alignment="CENTER_RIGHT" layoutX="139.0" layoutY="230.0" prefHeight="55.0" prefWidth="693.0" text="The ultimate solar panel information hub.">
               <font>
                  <Font size="38.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
